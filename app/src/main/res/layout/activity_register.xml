        android:layout_y="245dp"
        android:text="Contact no. 2"
        android:textStyle="bold|italic"
        tools:fontFamily="sans-serif-condensed"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="327dp" />

    <TextView
        android:id="@+id/tvcompany"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="0.08"
        android:layout_x="31dp"
        android:layout_y="245dp"
        android:text="Company Name"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/tvcontact2"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toStartOf="parent"
        tools:fontFamily="sans-serif-condensed"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="393dp" />
    <TextView
        android:id="@+id/tvdesignation"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:layout_weight="0.08"
        android:layout_x="31dp"
        android:layout_y="245dp"
        android:text="Designation"
        android:textStyle="bold|italic"
        tools:fontFamily="sans-serif-condensed"
        tools:layout_editor_absoluteY="501dp"
        tools:layout_editor_absoluteX="5dp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/etfirname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:layout_x="128dp"
        android:layout_y="69dp"
        android:ems="10"
        android:hint="Eg. John"
        android:inputType="textPersonName"
